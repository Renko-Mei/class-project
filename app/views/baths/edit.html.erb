<h1>Hello Admin</h1>
<h2>This is the place where you choose to accept or deny bathroom requests</h2>

<!--this will be a potential problem when our database gets full so make sure you change it-->
<% @baths.each do |bath| %>
        <div class="row">
            <div class="col-md-6 col md-offset-3">


                    <table class="table">
                        <tr>
                            <th><b>Address</b></th>
                            <td><b><%= bath.address %></b></td>
                        </tr>
                        <tr>
                            <th><b>City</b></th>
                            <td><b><%= bath.city %></b></td>
                        </tr>
                        <tr>
                            <th><b>Province/State</b></th>
                            <td><b><%= bath.province %></b></td>
                        </tr>
                        <tr>
                            <th><b>Country</b></th>
                            <td><b><%= bath.country %></b></td>
                        </tr>
                        <tr>
                            <th><b>Rating</b></th>
                            <td><b><%= bath.rating %></b></td>
                        </tr>

                        <tr>
                            <th><b>Longitude</b></th>
                            <td><b><%= bath.longitude %></b></td>
                        </tr>

                        <tr>
                            <th><b>Latitude</b></th>
                            <td><b><%= bath.latitude %></b></td>
                        </tr>

                        <tr>
                           <td><%= form_for(bath) do |f| %>
                                <div class="field">
                                    <%= f.label "Add Bathroom" %> <br />
                                    <%= f.check_box :admin_accept %> <br />
                                </div>
                            <%= f.submit "Submit", class: "button small radius" %>
                            <% end %></td>
                        </tr>
                        
                        <tr>
                            <th><%= link_to "Destroy", bath, method: :delete, data: { confirm: "You sure?" } %></th>
                        </tr>
                    </table>


            </div>
        </div>
<% end %>
