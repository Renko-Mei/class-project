<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<h1>All bathrooms</h1>


<% if current_user.role == "female" || current_user.role == "male" %>

    <div class="row" style="width:50%;">
        <div class="col-md-6 col md-offset-3" style="min-width: 450px;">
            <% @baths.each do |bath| %>
                    <% if bath.admin_accept == true %>
                    <table class="table">
                        <tr>
                            <th><b>Location</b></th>
                            <td><b><%= bath.city %>, <%= bath.address %></b></td>
                        </tr>

                        <tr>
                            <th><b>Distance from me</b></th>
                            <td><b><%= bath.distance_from([current_user.latitude, current_user.longitude]) %> miles away</b></td>
                        </tr>

                        <tr style="border-bottom: 1px solid #fff">
                          <td colspan="2">
                            <div style="text-alighn:left; width:30%; float: left;"><%= link_to "Directions", direction_path(bath) %></th> </div>
                            <div style="text-align:right; width:30%; float: left;"><%= link_to "View", view_path(bath) %></div>
                          </td>
                        </tr>


                    </table>



                    <% end %>
            <% end %>

        </div>
    </div>


<% elsif isAdmin? %>
    <% @baths.each do |bath| %>
    <% if bath.admin_accept == true %>
    <div class="row" style="width:50%;">
        <div class="col-md-6 col md-offset-3" style="min-width: 450px;">


                    <table class="table">
                        <tr>
                            <th><b>Location</b></th>
                            <td><b><%= bath.city %>, <%= bath.address %></b></td>
                        </tr>
                        <tr>
                            <th><b>Longitude</b></th>
                            <td><b><%= bath.longitude %></b></td>
                        </tr>

                        <tr>
                            <th><b>Latitude</b></th>
                            <td><b><%= bath.latitude %></b></td>
                        </tr>
                        <tr>
                            <th><b>Bath ID</b></th>
                            <td><b><%= bath.id %></b></td>
                        </tr>


                        <tr style="border-bottom: 1px solid #fff">
                          <td colspan="2">
                            <div style="text-alighn:left; width:30%; float: left;"><%= link_to " Review ", new_bath_review_path(bath) %></div>
                            <div style="text-alighn:left; width:30%; float: left;"><%= link_to "Destroy", bath, method: :delete, data: { confirm: "You sure?" } %></div>
                            <div style="text-align:right; width:30%; float: left;"><%= link_to " View ", view_path(bath) %></div>
                          </td>
                        </tr>

                    </table>
 <div class="clear"></div>

















        </div>
    </div>
    <% end %>



    <% end %>




<% end %>
