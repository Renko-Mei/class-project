<% if current_user.role == "female" || current_user.role == "male" %>
    <h1>These are the bathrooms you have added</h1>
    
    <div class="row">
        <div class="col-md-6 col md-offset-3">
            
            <% @baths.each do |bath| %>
                    <table class="table">
                        <tr>
                            <th><b>Address</b></th>
                            <td><b><%= bath.address %></b></td>
                        </tr>
                        <tr>
                            <th><b>City</b></th>
                            <td><b><%= bath.city %></b></td>
                        </tr>
                        <tr>
                            <th><b>Rating</b></th>
                            <td><b><%= bath.rating %></b></td>
                        </tr>
                        
                        <tr>
                            <th><b>Bath ID</b></th>
                            <td><b><%= bath.id %></b></td>
                        </tr>                        

                        <tr>
                            <th><%= link_to "Leave A Review", new_bath_review_path(bath) %></th>
                        </tr>
                        
                        <tr>
                             <th><%= link_to "Show Reviews", bath_review_path(bath, current_user) %></th>
                        </tr>
                        
                    </table>
            <% end %>
            
        </div>
    </div>
    
    
<% elsif current_user.role == "admin" %>
    <h1>These are the bathrooms in the database</h1>
    <% @baths.each do |bath| %>
    <div class="row">
        <div class="col-md-6 col md-offset-3">
            
            
                    <table class="table">
                        <tr>
                            <th><b>Address</b></th>
                            <td><b><%= bath.address %></b></td>
                        </tr>
                        <tr>
                            <th><b>City</b></th>
                            <td><b><%= bath.city %></b></td>
                        </tr>
                        <tr>
                            <th><b>Rating</b></th>
                            <td><b><%= bath.rating %></b></td>
                        </tr>
                        
                        <tr>
                            <th><b>Longitude</b></th>
                            <td><b><%= bath.longitude %></b></td>
                        </tr>
                        
                        <tr>
                            <th><b>Latitude</b></th>
                            <td><b><%= bath.latitude %></b></td>
                        </tr>

                        
                        <tr>
                            <th><%= link_to "Leave A Review", new_bath_review_path(bath) %></th>
                        </tr>
                        
                        <tr>
                             <th><%= link_to "Show Reviews", bath_review_path(bath, current_user) %></th>
                        </tr>

                        
                        
                        <tr>
                            <th><%= link_to "Destroy", bath, method: :delete, data: { confirm: "You sure?" } %></th>
                        </tr>
                    </table>
            
            
        </div>
    </div>
    

    
    
    <% end %>
    


    
<% end %>