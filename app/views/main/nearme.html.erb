<h1>These are the baths near you</h1>

    <% @baths.each do |bath| %>
    <div class="row">
        <div class="col-md-6 col md-offset-3">
            
            
                    <table class="table">
                        <tr>
                            <th><b>Location</b></th>
                            <td><b><%= bath.city %>, <%= bath.address %></b></td>
                        </tr>
                        <tr>
                            <th><b>Rating</b></th>
                            <td><b><%= bath.rating %></b></td>
                        </tr>
                    </table>
        </div>
    </div>
    <% end %>