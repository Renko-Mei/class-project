<h1>Edit Your Review</h1>
<%= form_for [@bath, @review] do |f| %>
    
    <div class="field">  
        <%= f.label :rating %><br />
        <%= f.number_field :rating, value: 1, min: 1, max: 5 %>
    </div>
    
    <div class="field">  
        <%= f.label :post %><br />
        <%= f.text_area :post %>
        
    </div>
        <%= f.submit "Submit edit" %> 
<% end %>
<%= link_to "Destroy", bath_review_destroy_path(@bath, @review), method: :delete, data: { confirm: "You sure?" } %></div>

